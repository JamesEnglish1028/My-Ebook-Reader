{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "archive/**",
    "docs/**",
    "public/**",
    "proxy/**",
    "mebooks-integration-package/**"
  ]
}
